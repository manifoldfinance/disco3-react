{
    "name": "libpermit",
    "version": "0.1.0",
    "description": "Ethereum EIP-2612: permit & 712-signed approvals",
    "scripts": {
        "prebuild": "rm -rf dist && yarn run test:coverage",
        "build": "tsc --module commonjs",
        "postbuild": "cp package.json dist && cp README.md dist",
        "lint": "eslint ./src --ext .js,.ts",
        "test": "jest",
        "test:coverage": "jest --collectCoverage",
        "typecheck": "tsc --noEmit --skipLibCheck",
        "prettier": "prettier --write .",
        "ci-pipeline": "yarn run lint && yarn run test && yarn run typecheck"
    },
    "repository": {
        "type": "git",
        "url": "ssh://git@github.com:manifoldfinance/disco3-react.git",
        "directory": "packages/libpermit"
    },
    "author": "SEE CONTRIBUTORS",
    "license": "MIT",
    "dependencies": {
        "eth-sig-util": "^3.0.1",
        "web3": "^1.5.1",
        "web3-utils": "^1.5.1"
    },
    "devDependencies": {
        "@babel/core": "^7.13.16",
        "@babel/preset-env": "^7.13.15",
        "@babel/preset-typescript": "^7.13.0",
        "@types/jest": "^26.0.22",
        "@typescript-eslint/eslint-plugin": "4",
        "babel-jest": "^26.6.3",
        "eslint": "7",
        "eslint-config-prettier": "^8.2.0",
        "eslint-config-standard-with-typescript": "^20.0.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "11",
        "eslint-plugin-promise": "4",
        "eslint-plugin-unused-imports": "^1.1.1",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "ts-loader": "^9.0.2",
        "ts-mockito": "^2.6.1",
        "ts-node": "^9.1.1",
        "tslib": "^2.2.0",
        "typescript": "^4.2.4"
    }
}
