{
  "name": "@disco3/monorepo",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --config .prettierrc.js --write \"**/*.{ts,tsx,md}\"",
    "deduplicate": "npx yarn-deduplicate -s fewer yarn.lock",
    "deduplicate:check": "npx yarn-deduplicate -s fewer yarn.lock --list --fail"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^14",
    "@types/react-test-renderer": "^17.0.1",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "turbo": "latest"
  },
  "turbo": {
    "baseBranch": "origin/trunk",
    "build": {
      "outputs": ["dist/**", ".next/**"],
      "dependsOn": ["^build"]
    },
    "dependsOn": [
      "^build"
    ],
    "outputs": [
      "dist/**",
      ".next/**"
    ]
  },
  "lint": {
    "outputs": []
  },
  "dev": {
    "cache": false
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "dependencies": {}
}
